{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "src",           /* Source folder */
    "outDir": "dist",           /* Compiled output folder */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],           /* Include your source files */
  "exclude": ["node_modules"]   /* Ignore dependencies */
}
